{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Redragon Stream Deck",
  "version": "2.0.0",
  "identifier": "com.tecnodespegue.redragon-streamdeck",
  "build": {
    "frontendDist": "../public"
  },
  "app": {
    "windows": [
      {
        "title": "Redragon Stream Deck - por Tecnodespegue",
        "width": 950,
        "height": 800,
        "minWidth": 800,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libusb-1.0-0"]
      },
      "rpm": {
        "depends": ["webkit2gtk4.1", "libusb1"]
      }
    },
    "category": "Utility",
    "shortDescription": "Control panel for Redragon SS-550 Stream Deck",
    "longDescription": "Driver y panel de control open source para Redragon SS-550 Stream Deck en Linux. Interfaz moderna, múltiples páginas, iconos personalizados y auto-inicio."
  }
}
